{% block content %}
main
    .container

        .row.justify-content-center.align-items-center
            .col-md-6
                form(method="post")
                
                    .card
                        .card-body
                            form(action="signin" method="post")
                                {% csrf_token %}
                                <input type="hidden" name="next" value="{{ next }}">
                                .row

                                    <div class="col-md-12">
                                    <div class="form-group">
                                    <label for="Email">Email</label>
                                    <input type="email" class="form-control" name="username" id="Email" aria-describedby="email" placeholder="Email">
                                    </div>
                                    </div>
                                    <div class="col-md-12">      
                                    <div class="form-group">
                                    <label for="Password">Senha</label>
                                    <input type="password" class="form-control" name="password" id="Password" placeholder="Senha">
                                    </div>
                                    </div>
                                    <div class="col-md-12">  
                                    <p class="text-center"><a href="{% url 'password_reset' %}" >Esqueceu a senha?</a>
                                    </p>
                                    <p class="text-center">
                                    <a href="{% url 'signup' %}">ou criar conta</a>
                                    </p>
                                    
                                    <button type="submit" style="width:200px;display: block;margin: 0 auto;" class="btn btn-primary">Entar</button>
                                    </div>
                    
                                    

            

{% endblock %}

