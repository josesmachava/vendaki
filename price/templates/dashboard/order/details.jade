{% extends "price/layout/base.html" %}
{% load staticfiles %}
{% comment %}
{% endcomment %}
{% load staticfiles %}
{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}
link(rel="stylesheet",   href="{% static 'stylesheet/malangatana.min.css' %}")
link(rel="stylesheet",   href="{% static 'stylesheet/dashboard.css' %}")
link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")
{% endblock %}
{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}


{% block content %}

main.layout-row
    {% include "dashboard/layout/aside.jade" %}
    .layout
        .layout-header
            {% include "dashboard/layout/menu.jade" %}


        .layout-content
           .mtn-col-16
               table.mtn-table
                    thead.mtn-table-thead

                        tr
                            th
                                span.mtn-table-header-column #
                            th
                                span.mtn-table-header-column Producto
                            th
                                span.mtn-table-header-column Preco
                            th
                                span.mtn-table-header-column  Quantidade
                            th
                                span.mtn-table-header-column  Total





                    {% for order_product in order.product.all %}
                    tbody.mtn-table-tbody
                        tr
                            td
                                a(href="{%  url  'order-detail' order.id %}") {{ order.id }}

                            td  {{ order_product.product.name }}
                            td {{ order_product.product.price }}
                            td {{ order_product.quantity }}
                            td {{ order_product.get_total_product_price  }}







                    {% endfor %}
           .mtn-col-8
               .card.border-none
                   .card-body
                       <h4>Total: {{ object.get_total }}</h4>
                       <button class="btn btn-danger"><a href="{%  url  'complete-order' order.id  order.user.pk %}">Finalizar Compra</a> </button>


        .layout-footer
              {% include "dashboard/layout/footer.jade" %}

{% endblock %}










