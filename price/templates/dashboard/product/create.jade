{% extends "price/layout/base.html" %}
{% load static %}

{% comment %}

{% endcomment %}
{% load static %}
{% load crispy_forms_tags %}

{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}


link(rel="stylesheet",   href="{% static 'stylesheet/dashboard/dashboard.css' %}")

link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")



{% endblock %}


{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}



{% block content %}

main
    .container-fluid
        .row
            .col-md-2.aside
                 {% include "dashboard/layout/aside.jade" %}

            .col-md-10
                {% include "dashboard/layout/menu.jade" %}
                .col-md-12
                    form(method="post")
                        .row


                            .col-md-6
                                .card.card-content
                                    {% csrf_token %}
                                    {{ form.image }}
                                    {{ form.name|as_crispy_field }}
                                    {{ form.description|as_crispy_field }}

                                    {{ form.file|as_crispy_field }}

                            .col-md-3
                                .card.card-content
                                    {{ form.price|as_crispy_field }}

                            .col-md-12
                                <button type="submit" class="btn btn-success">Create Product</button>



{% endblock %}


