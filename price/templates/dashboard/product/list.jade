{% block content %}

main.layout-row
    {% include "dashboard/aside.jade" %}
    .layout
        .layout-header
            {% include "dashboard/menu.jade" %}


        .layout-content
           table.mtn-table
                thead.mtn-table-thead

                    tr
                        th
                            span.mtn-table-header-column #
                        th
                            span.mtn-table-header-column Nome
                        th
                            span.mtn-table-header-column Pre√ßo
                        th
                            span.mtn-table-header-column Empresa
                        th
                            span.mtn-table-header-column Categoria


                        th
                            span.mtn-table-header-column Edit
                        th
                            span.mtn-table-header-column Delete


                {% for product in products %}
                tbody.mtn-table-tbody
                    tr
                        td {{ product.id }}
                        td {{ product.name }}
                        td {{ product.price }}
                        td {{ product.company.commercial_name }}
                        td {{ product.categories.name }}



                        td
                            a(href="{% url 'product-delete' 1   %}")
                                i.far.fa-trash-alt
                        td
                            a(href="{% url 'product-update' 1   %}")
                                i.fas.fa-edit


                {% endfor %}

         .layout-footer
                {% include "dashboard/layout/footer.jade" %}

{% endblock %}





