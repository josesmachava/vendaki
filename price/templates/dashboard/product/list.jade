{% extends "price/layout/base.html" %}
{% load staticfiles %}
{% comment %}
{% endcomment %}
{% load staticfiles %}
{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}
link(rel="stylesheet",   href="{% static 'stylesheet/dashboard.css' %}")
link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")
{% endblock %}
{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}


{% block content %}

main
    .container-fluid
        .row
            .col-md-2.aside
                {% include "dashboard/layout/aside.jade" %}

            .col-md-10
                {% include "dashboard/layout/menu.jade" %}


                .layout-content
                   table.mtn-table
                        thead.mtn-table-thead

                            tr
                                th
                                    span.mtn-table-header-column #
                                th
                                    span.mtn-table-header-column Nome
                                th
                                    span.mtn-table-header-column Pre√ßo
                                th
                                    span.mtn-table-header-column Empresa
                                th
                                    span.mtn-table-header-column Categoria


                                th
                                    span.mtn-table-header-column Editar
                                th
                                    span.mtn-table-header-column Deletar


                        {% for product in products %}
                        tbody.mtn-table-tbody
                            tr
                                td {{ product.id }}
                                td {{ product.name }}
                                td {{ product.price }}
                                td {{ product.company.commercial_name }}
                                td {{ product.categories.name }}



                                td
                                    a(href="{% url 'product-update' product.id   %}")
                                        i.fas.fa-edit

                                td
                                    a(href="{% url 'product-delete' product.id   %}")
                                        i.far.fa-trash-alt



                        {% endfor %}
                   {% if is_paginated %}
                   {% include "price/layout/pagination.html" %}
                   {% endif %}
                 .layout-footer
                        {% include "dashboard/layout/footer.jade" %}

{% endblock %}





