{% extends "price/layout/base.html" %}
{% load static %}

{% comment %}

{% endcomment %}
{% load static %}
{% load crispy_forms_tags %}

{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}


link(rel="stylesheet",   href="{% static 'stylesheet/dashboard.css' %}")

link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")



{% endblock %}


{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}



{% block content %}

main
    .container-fluid
        .row
            .col-md-2.aside
                 {% include "dashboard/layout/aside.jade" %}

            .col-md-10
                {% include "dashboard/layout/menu.jade" %}
                .col-md-12

                {% for product in products %}
                .card-content
                    .row

                        .col-md-11
                            img(src="{{ product.image }}", class="product-list-image")
                            {{ product.id }}
                            {{ product.name }}
                            {{ product.price }}


                        .col-md-1
                            a(href="{% url 'product-update' product.id   %}")
                                i.fas.fa-edit


                            a(href="{% url 'product-delete' product.id   %}")
                                i.far.fa-trash-alt



                {% endfor %}
                {% if is_paginated %}
                {% include "price/layout/pagination.html" %}
                {% endif %}

        {% include "dashboard/layout/footer.jade" %}



{% endblock %}






