{% extends "price/layout/base.html" %}
{% load static %}

{% comment %}

{% endcomment %}
{% load static %}
{% load crispy_forms_tags %}

{# overide the tile of the page #}
{% block title %}
<title>Eskina - Adicionar Producto</title>
{{ form.media }}
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}


link(rel="stylesheet",   href="{% static 'stylesheet/dashboard/dashboard.css' %}")
script(src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js", referrerpolicy="origin")

script().
    tinymce.init({selector: 'textarea'});

{% endblock %}


{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}



{% block content %}

main
    .container-fluid
        .row
            .col-md-12
                 {% include "dashboard/layout/menu.jade" %}
               
            .col-md-12
                .container
                    .row.justify-content-center.align-items-center
                        .col-md-12
                            form(method="post")
                                .card
                                    .card-body

                                        h1 Editat Produto 
                                        {% csrf_token %}
                                        .row
                                            .col-md-12

                                                {{ form.image|as_crispy_field }}

                                        .row
                                            .col-md-9
                                                {{ form.name|as_crispy_field }}
                                            .col-md-3
                                                {{ form.price|as_crispy_field }}

                                        {{ form.description|as_crispy_field }}
                                        .row
                                            .col-md-12
                                                {{ form.file|as_crispy_field }}

                                        <button type="submit" class="btn btn-success">Salvar</button>


{% endblock %}


