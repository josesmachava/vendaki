{% extends "price/layout/base.html" %}
{% load staticfiles %}
{% comment %}
{% endcomment %}
{% load staticfiles %}
{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}
link(rel="stylesheet",   href="{% static 'stylesheet/malangatana.min.css' %}")
link(rel="stylesheet",   href="{% static 'stylesheet/dashboard.css' %}")
link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")
{% endblock %}
{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}


{% block content %}

main.layout-row
    {% include "dashboard/layout/aside.jade" %}
    .layout
        .layout-header
            {% include "dashboard/layout/menu.jade" %}


        .layout-content
           table.mtn-table
                thead.mtn-table-thead

                    tr
                        th
                            span.mtn-table-header-column #
                        th
                            span.mtn-table-header-column Nome
                        th
                            span.mtn-table-header-column Apelido
                        th
                            span.mtn-table-header-column Email


                        th
                            span.mtn-table-header-column Edit
                        th
                            span.mtn-table-header-column Delete


                    {% for user in users %}
                    tbody.mtn-table-tbody
                        tr
                            td {{ user.id }}
                            td {{ user.first_name }}
                            td {{ user.last_name }}
                            td {{ user.email }}



                            td
                                a(href="{% url 'user-delete' user.id   %}")
                                    i.far.fa-trash-alt
                            td
                                a(href="{% url 'user-update' user.id   %}")
                                    i.fas.fa-edit


                    {% endfor %}
           {% if is_paginated %}
           {% include "price/layout/pagination.html" %}
           {% endif %}

         .layout-footer
               {% include "dashboard/layout/footer.jade" %}

{% endblock %}






