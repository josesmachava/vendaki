{% block content %}

main
    .container-fluid
        .row
            .col-md-12
                img(src="{{ store.logo }}", alt="{{ store.name }}", class="store-logo")

    .container
        .row

           .col-md-7
                img(src="{{ product.image }}", alt="{{ product.name }}", class="product-image")
           .col-md-4
                h1.product-name.text-center.text-capitalize {{ product.name }}
                {{ product.description|safe }}
                h2.product-price.text-center.text-capitalize {{ product.price }} MT
                .card-content.card
                    .tip-message

                        p Uma notificação ussd da vodacom foi enviada para o seu número .  Insira seu pin Mpesa para autorizar a transação de pagamento .
                    {% for message in messages %}
                    <div class="container-fluid p-0">
                    <div class="alert {{ message.tags }} alert-dismissible" role="alert" >
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                    {{ message }}
                    </div>
                    </div>
                    {% endfor %}


                    form(method="POST")
                        {% csrf_token %}
                        {{ form.name|as_crispy_field }}
                        <small id="emailHelp" class="form-text text-muted">Digite o seu número 84 para efectuar o pagamento.</small>

                        {{ form.número_de_telefone|as_crispy_field }}
                        button.btn.btn-primary Comprar




script().
    $(document).ready(function () {
        $('.tip-message').hide()
        $("form").submit(function (event) {
            var phone_number = $("#id_número_de_telefone").val()
            var phone_number_regExp = new RegExp(/^(84)+([0-9]{7})/);    // regular expression pattern

            if($("#id_name").val() && phone_number_regExp.test(phone_number)){
                $('form').hide();
                $('.tip-message').show()
            }

        });


    });


{% endblock %}
