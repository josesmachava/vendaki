{% extends "price/layout/base.html" %}
{% load static %}

{% comment %}

{% endcomment %}
{% load static %}
{% load crispy_forms_tags %}

{# overide the tile of the page #}
{% block title %}
<title>Price</title>
{{ form.media }}
{% endblock %}
{% block styles %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}


link(rel="stylesheet",   href="{% static 'stylesheet/dashboard/dashboard.css' %}")
script(src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js", referrerpolicy="origin")
link(rel="stylesheet",   href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")


script().
    tinymce.init({selector: 'textarea'});

{% endblock %}


{% block scripts %}
{#    only include css  files needed for thi page bootstap and other libs are add in base template #}

{% endblock %}



{% block content %}

main
    .container-fluid
        .row
            .col-md-12
                {% include "dashboard/layout/menu.jade" %}
                 
    .container

        .row.justify-content-center.align-items-center
            .col-md-12
                form(method="post")
                    
                    .card
                        .card-body

                            h1 Detalhes da loja
                            {% csrf_token %}
                            .row
                                .col-md-12

                                    {{ form.logo|as_crispy_field }}

                            .row
                                .col-md-12
                                    {{ form.name|as_crispy_field }}
                                .col-md-12
                                    

                            {{ form.description|as_crispy_field }}

                    .card
                        .card-body

                            .row
                                .col-md-12

                                    {{ form.street_address|as_crispy_field }}

                            .row
                                .col-md-12
                                    {{ form.province|as_crispy_field }}
                                .col-md-12
                                    {{ form.city|as_crispy_field }}

                                .col-md-12
                                    {{ form.phone_number|as_crispy_field }}


                                 
                    .card
                        .card-body

                            .row
                                .col-md-12

                                    {{ form.twitter|as_crispy_field }}

                            .row
                                .col-md-12
                                    {{ form.facebook|as_crispy_field }}
                                .col-md-12
                                    {{ form.instagram|as_crispy_field }}


                  
                            
                                   
                            <button type="submit" class="btn btn-success">Salvar</button>


{% endblock %}


